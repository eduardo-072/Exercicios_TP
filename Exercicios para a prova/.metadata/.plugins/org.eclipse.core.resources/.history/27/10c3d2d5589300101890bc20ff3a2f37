package Exercicios_POO;
import java.util.Scanner;
public class Inversa {

	public static void main(String[] args) {
		Scanner scan = new Scanner(System.in);
		
		int[][] I2 = {
			{1, 0},
			{0, 1}
		};
			
		int matriz[][] = new int [2][2];
		
		//Inserindo valores dentro da Matriz
		System.out.println("Digite um valor para a matriz: "); 
		for(int l = 0; l < 2; l++) {
			for(int c = 0; c < 2; c++) {
				System.out.println("Digite o valor para a posição [" + l + "] [" + c + "]:	");
				matriz[l][c] = scan.nextInt();
			}
		}
		
		System.out.println();
		
			for (int l = 0; l < 2; l++) {
				System.out.println();
				for (int c = 0; c < 2; c++) {
					System.out.print(matriz[l][c] + " ");
				}
		
			}
		int pivo1 = matriz[0][0];
		int nrNegativo1 = matriz[1][0] * -1;
		
		int L1_C1 = nrNegativo1 * matriz[0][0];
		int L1_C2 = nrNegativo1 * matriz[0][1];
		int L1_C3 = nrNegativo1 * I2[0][0];
		int L1_C4 = nrNegativo1 * I2[0][1];
		
		int L2_C1 = pivo1 * matriz[1][0];
		int L2_C2 = pivo1 * matriz[1][1];
		int L2_C3 = nrNegativo1 * I2[0][0];
		int L2_C4 = nrNegativo1 * I2[0][1];
		
		System.out.println();
		
		//Nova Matriz
		 System.out.println("Nova Matriz 2x4:");
		 
		 int[][] novaMatriz = new int[2][4];
	        for (int l = 0; l < 2; l++) {
	            for (int c = 0; c < 4; c++) {
	                System.out.print(novaMatriz[l][c] + " ");
	        }
	    }
	}
}
